<h1>All Flights</h1>

<% @flights.each do |flight| %>
  <section id='flight-<%= flight.id %>'>
    <p>Flight No. <%= flight.number %>,
    <%= flight.airline.name %></p>
    <ul>
      Passengers:
      <% flight.passengers.each do |passenger| %>
      <li>
        <%= passenger.name %>
        <%= button_to "Remove #{passenger.name}", flight_passenger_path(passenger), method: :delete %>
      </li>
    <% end %>
    </ul>
  </section>
<% end %>
