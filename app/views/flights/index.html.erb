<h1>All Flights:</h1>
<% @flights.each do |flight| %>
  <div flights="<%= flight.id %>">
    <h3>Flight: #<%= flight.number %> - <%= flight.airline.name %> Airlines</h3>
    <h4>Passengers: <% flight.passengers.each do |passenger| %></h4>
    <p><%= passenger.name %></p>
    <%= link_to "Remove #{passenger.name}", flight_passenger_path(flight.id, passenger_id: passenger.id), method: :delete %>
    <% end %>
  </div>
<% end %>